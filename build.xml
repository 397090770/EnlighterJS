<?xml version="1.0" encoding="UTF-8"?>

<!--
	Simple ANT-based buildscript for EnlighterJS 
	(Syntax Highlighter based on the famous Lighter.js from Jose Prado)
	
	@requires	MooTools.Core > 1.4
	@author		Andi Dittrich <andi.dittrich@a3non.org>
	@version	1.0
	
!-->
<project name="EnlighterJS" default="build" basedir=".">

	<!-- Target Properties ! -->
	<property name="yui.jar" value="Util/yuicompressor-2.4.7.jar" />
	<property name="build.dir" value="Build/" />
	
	<!-- ANT.contrib package -->
	<path id="ant.contrib.classpath" location="Util/ant-contrib-0.6.jar"></path>
	<taskdef resource="net/sf/antcontrib/antlib.xml">
	    <classpath refid="ant.contrib.classpath" />
	</taskdef>

	<!-- Generate Build -->
	<target name="build">
		<!-- Cleanup Build Dir -->
		<delete dir="${build.dir}" />
		
		<!-- Themes (Flames) to include !-->
		<property name="include.themes" value="Source/Themes/Git.css Source/Themes/Mocha.css Source/Themes/Panic.css Source/Themes/Standard.css Source/Themes/Tutti.css Source/Themes/Twilight.css" />

		<!-- Languages (Fuels) to include !-->
		<property name="include.languages" value="Source/Languages/Css.js Source/Languages/Html.js Source/Languages/Java.js Source/Languages/Js.js Source/Languages/Md.js Source/Languages/Php.js Source/Languages/Python.js Source/Languages/Ruby.js Source/Languages/Shell.js Source/Languages/Sql.js" />
		
		<!-- ****************************** JS BUILD LIBRARY **************************** -->
		<ant antfile="util/concat-compress.xml">
			<property name="compress.description" value="Enlighter" />
			<property name="compress.type" value="js" />
			<property name="compress.input" value="Source/Compiler.js Source/Language.js Source/EnlighterJS.js Source/Element.EnlighterJS.js Source/Tokenizer.js Source/Token.js Source/Compiler/Inline.js Source/Compiler/Lines.js Source/Compiler/List.js Source/Tokenizer/Smart.js Source/Tokenizer/Lazy.js Source/Tokenizer/Xml.js ${include.languages}" />
			<property name="compress.output" value="EnlighterJS.yui.js" />
			<property name="uncompress.output" value="EnlighterJS.js" />
		</ant>

		<!-- ****************************** CSS BUILD *********************************** -->
		<ant antfile="util/concat-compress.xml">
			<property name="compress.description" value="Enlighter" />
			<property name="compress.type" value="css" />
			<property name="compress.input" value="${include.themes}" />
			<property name="compress.output" value="EnlighterJS.yui.css" />
			<property name="uncompress.output" value="EnlighterJS.css" />
		</ant>
	</target>

	<!-- Generate Testcases -->
	<target name="testcases">
		<for param="filename" list="css,html,js,java,md,php,ruby,sql,unit">
			<sequential>
				<!-- Remove old file !-->
				<delete file="Tests/Testcase.@{filename}.html" />
				
				<!-- Duplicate Template File !-->
				<copy file="Tests/Template.html" tofile="Tests/Testcase.@{filename}.html" />
				
				<!-- Load Testdata !-->
				<loadfile property="data.@{filename}" srcFile="Tests/data/@{filename}.html" />
				
				<!-- replace placeholder with testdata content !-->
				<replace file="Tests/Testcase.@{filename}.html" token="{{TITLE}}" value="@{filename}" />
				<replace file="Tests/Testcase.@{filename}.html" token="{{CONTENT}}" value="${data.@{filename}}" />
					
			</sequential>
		</for>

	</target>
</project>